#!/bin/bash

echo "remove bash history"
rm  ~/.bash_history
echo "------------------------"
echo "remove zsh history"
rm  ~/.zsh_history
echo "------------------------"
echo "remove viminfo"
rm  ~/.viminfo
echo "------------------------"
echo "remove atom data"
rm -rf ~/Library/Application\ Support/Atom/
rm -rf ~/.atom/storage/*
echo "------------------------"
echo "remove pry history"
rm ~/.pry_history
echo "------------------------"
echo "remove irb history"
rm ~/.irb-history
echo "------------------------"
echo "guard history"
rm ~/.guard_history
echo "------------------------"
echo "remove less history"
rm ~/.lesshst
echo "------------------------"
echo "remove sqlite history"
rm ~/.sqlite_history
echo "------------------------"
echo "remove psql history"
rm ~/.psql_history
echo "------------------------"
echo "remove redis history"
rm ~/.rediscli_history
echo "------------------------"
echo "remove vim backups and plugin cache"
rm -rf ~/.vim/_cache/*
rm ~/.vim/_backup/*
echo "------------------------"
echo "remove xcode derived data"
rm -rf ~/Library/Developer/Xcode/DerivedData
echo "------------------------"
echo "removing conflicted files from dropbox"
find ~/Dropbox -type f -name "* conflicted *" -exec rm -f {} \;
echo "------------------------"
echo "remove safari js console history"
rm -rf ~/Library/WebKit/com.apple.Safari/WebsiteData/LocalStorage/*
echo "------------------------"
echo "remove chrome js console history"
rm -rf ~/Library/Application\ Support/Google/Chrome/Profile\ 1/Local\ Storage/chrome-devtools_devtools_*
echo "------------------------"
