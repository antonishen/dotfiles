#!/bin/bash

echo "remove bash history"
rm  ~/.bash_history
echo "------------------------"
echo "remove zsh history"
rm  ~/.zsh_history
echo "------------------------"
echo "remove viminfo"
rm  ~/.viminfo
echo "------------------------"
echo "remove pry history"
rm ~/.pry_history
echo "------------------------"
echo "remove irb history"
rm ~/.irb-history
echo "------------------------"
echo "remove less history"
rm ~/.lesshst
echo "------------------------"
echo "remove sqlite history"
rm ~/.sqlite_history
echo "------------------------"
echo "remove psql history"
rm ~/.psql_history
echo "------------------------"
echo "remove vim backups and plugin cache"
rm -rf ~/.vim/_cache/*
rm ~/.vim/_backup/*
echo "------------------------"
