#!/bin/bash

tmux start-server
tmux -u new -d -s web
tmux neww -t web
tmux neww -t web

tmux rename-window -t web:1 vim
tmux rename-window -t web:2 shell
tmux rename-window -t web:3 server

tmux send-keys -t web:1 "rvm gemset use webdev; prev" C-m
tmux send-keys -t web:2 "rvm gemset use webdev; prev" C-m
tmux send-keys -t web:3 "rvm gemset use webdev; prev" C-m

tmux select-window -t web:1
tmux attach-session -t web
