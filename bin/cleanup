#!/bin/bash

echo "remove bash history"
rm ~/.bash_history
echo "------------------------"
echo "remove bash_sessions"
rm -rf ~/.bash_sessions
echo "------------------------"
echo "remove zsh history"
rm ~/.zsh_history
echo "------------------------"
echo "remove zcompdump files"
rm ~/.zcompdump*
echo "------------------------"
echo "remove viminfo"
rm ~/.viminfo
echo "------------------------"
echo "remove tig history"
rm ~/.tig_history
echo "------------------------"
echo "remove atom data"
rm -rf ~/Library/Application\ Support/Atom/
rm -rf ~/.atom/storage/*
echo "------------------------"
echo "remove pry history"
rm ~/.pry_history
echo "------------------------"
echo "remove irb history"
rm ~/.irb-history
echo "------------------------"
echo "remove node repl history"
rm ~/.node_repl_history
echo "------------------------"
echo "remove guard history"
rm ~/.guard_history
echo "------------------------"
echo "remove less history"
rm ~/.lesshst
echo "------------------------"
echo "remove sqlite history"
rm ~/.sqlite_history
echo "------------------------"
echo "remove psql history"
rm ~/.psql_history
echo "------------------------"
echo "remove mysql history"
rm ~/.mysql_history
echo "------------------------"
echo "remove redis history"
rm ~/.rediscli_history
echo "------------------------"
echo "remove .v8flags files"
rm ~/.v8flags*
echo "------------------------"
echo "remove vim backups and plugin cache"
rm -rf ~/.vim/_cache/*
rm ~/.vim/_backup/*
echo "------------------------"
echo "remove xcode derived data"
rm -rf ~/Library/Developer/Xcode/DerivedData
echo "------------------------"
echo "removing conflicted files from dropbox"
find ~/Dropbox -type f -name "* conflicted *" -exec rm -f {} \;
echo "------------------------"
echo "remove safari js console history"
rm -rf ~/Library/WebKit/com.apple.Safari/WebsiteData/LocalStorage/*
echo "------------------------"
echo "remove chrome js console history"
rm -rf ~/Library/Application\ Support/Google/Chrome/Default/Local\ Storage/*
echo "------------------------"
echo "remove cached rake tasks"
find $HOME -iname '.rake_tasks' -print0 | xargs -0 rm
echo "------------------------"
